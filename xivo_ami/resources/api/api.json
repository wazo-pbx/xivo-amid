{
    "swagger": "2.0",
    "info": {
        "title": "XiVO AMId",
        "description": "Send AMI actions to Asterisk, providing token based authentication.",
        "version": "0.1"
    },
    "schemes": [
        "https"
    ],
    "basePath": "/1.0",
    "produces": [
        "application/json"
    ],
    "x-xivo-name": "amid",
    "x-xivo-port": 9491,
    "paths": {
        "/action/{action}": {
            "post": {
                "summary": "AMI action",
                "description": "The Action endpoint sends an action to the Asterisk Manager.\n\nSee https://wiki.asterisk.org/wiki/display/AST/Asterisk+13+AMI+Actions for more details about the AMI message parameters.\n",
                "parameters": [
                    {
                        "name": "action",
                        "in": "path",
                        "description": "Name of the manager action. Currently not supported: Queues, Command.",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "action_arguments",
                        "in": "body",
                        "description": "Arguments for the manager action.\n\nAction: taken from the URL\nActionID: not necessary\n\nIf you need a same key multiple times, give a list of values.\n\nFor Action: Originate, you should always use Async: True",
                        "schema": {
                            "$ref": "#/definitions/ActionArguments"
                        }
                    },
                    {
                        "name": "X-Auth-Token",
                        "in": "header",
                        "description": "Authentication token obtained from xivo-auth",
                        "required": true,
                        "type": "string"
                    }
                ],
                "tags": [
                    "action"
                ],
                "responses": {
                    "200": {
                        "description": "The Asterisk Manager responses",
                        "schema": {
                            "$ref": "#/definitions/Response"
                        }
                    },
                    "401": {
                        "description": "Invalid authentication token",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    },
                    "503": {
                        "description": "Another service is unavailable (e.g. xivo-auth)",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "Response": {
            "properties": {
                "response": {
                    "type": "string",
                    "description": "Name of the action response"
                }
            }
        },
        "ActionArguments": {
            "properties": {},
            "example": {
                "Channel": "SIP/abcdef",
                "Priority": "1",
                "Exten": "1234",
                "Context": "default",
                "Variable": ["Var1=one", "Var2=two"],
                "Async": "True"
            }
        },
        "Error": {
            "properties": {
                "timestamp": {
                    "type": "number",
                    "format": "timestamp"
                },
                "message": {
                    "type": "string"
                },
                "error_id": {
                    "type": "string"
                },
                "details": {
                    "type": "object"
                }
            }
        }
    }
}
