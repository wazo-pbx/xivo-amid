[Unit]
Description=xivo-amid server
ConditionPathExists=!/var/lib/xivo/disabled
After=network-online.target asterisk.service postgresql.service xivo-confgend.service
Wants=network-online.target asterisk.service postgresql.service xivo-confgend.service

[Service]
Type=forking
ExecStartPre=/usr/bin/install -d -o www-data -g www-data /var/run/xivo-amid
ExecStart=/usr/bin/xivo-amid
PIDFile=/var/run/xivo-amid/xivo-amid.pid

[Install]
WantedBy=multi-user.target
